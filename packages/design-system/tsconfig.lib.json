{
  "include": ["src/components"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"]
    }
  }
}
